%section.user.container
  .row
    .col-sm-10.col-sm-offset-1
      %header
        %h2 Category
      %table.table
        %thead
          %tr
            %th(width="30%") Category's name
            %th(width="20%") Words
            %th(width="20%") Followers
            %th(width="30%") Unfollow
        %tbody
          - @categories.each do |category|
            %tr
              %td= category.name
              %td.extra-padding
              %td.extra-padding
              %td.extra-padding