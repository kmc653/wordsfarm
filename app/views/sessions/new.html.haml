= render 'shared/header', header: 'Login'

= form_tag sessions_path, class: "form-horizontal" do
  .form-group
    = label_tag :email, 'Email Address', class: "col-sm-2 control-label"
    .col-sm-6
      = text_field_tag :email, params[:email], class: "form-control"
  .form-group
    = label_tag :password, nil, class: "col-sm-2 control-label"
    .col-sm-6
      = password_field_tag :password, nil, class: "form-control"
  .form-group
    .col-sm-offset-2.col-sm-10
      = submit_tag "Login", class: "btn btn-primary"
      = link_to "Forgot Password?", forgot_password_path
