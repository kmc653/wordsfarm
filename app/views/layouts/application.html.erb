<!DOCTYPE html>
<html>
<head>
  <title>WordsFarm</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <%= yield :head%>
</head>
<body>
  <nav class="navbar navbar-inverse">
    <div class="container-fluid">
      <div class="navbar-header">
        <%= link_to 'WordsFarm', root_path, class: 'navbar-brand' %>
      </div>
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav">
          <% if logged_in? %>
            <li><%= link_to "單字集", sort_by_created_date_path(current_user) %></li>
            <li><%= link_to "朋友", people_path %></li>
            <li><%= link_to "分類", category_path(current_user.id) %></li>
            <li><%= link_to "訊息", conversations_path %></li>
            <!-- <li><%= link_to "Search", search_path %></li> -->
            <li><%= link_to "贊助", donate_path, method: :get %></li>
            <% else %>
            <li><%= link_to "註冊", register_path %></li>
            <li><%= link_to "登入", login_path %></li>
          <% end %>
        </ul>
        <% if logged_in? %>
          <!-- <form class="navbar-form navbar-left" role="search">
            <div class="form-group">
              <input type="text" class="form-control" placeholder="Search">
            </div>
            <button type="submit" class="btn btn-default"><span class="glyphicon glyphicon-search" aria-hidden="true"></span></button>
          </form> -->
          <%= form_tag('/search', {:class => 'navbar-form navbar-left'}) do %>
            <div class="form-group">
              <input type="text" class="form-control" placeholder="輸入您想搜尋的單字" name="word">
            </div>
            <button type="submit" class="btn btn-default"><span class="glyphicon glyphicon-search" aria-hidden="true"></span></button>
          <% end %>
          <ul class="nav navbar-nav navbar-right">
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
                <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
                <%= current_user.full_name %>
                <span class="caret"></span>
              </a>
              <ul class="dropdown-menu" role="menu">
                <li>
                  <%= link_to "Add New Word 新增單字", new_vocabulary_path %>
                  <%= link_to "Create New Category 新增分類", new_category_path %>
                  <%= link_to "Invite a Friend 邀請好友", new_invitation_path %>
                  <%= link_to "Logout 登出", logout_path %>
                </li>
              </ul>
            </li>
          </ul>
        <% end %>
      </div>
    </div>
  </nav>
  <div class="container">
    <%= render 'shared/messages' %>
    <%= yield %>
  </div>
  <footer>
  </footer>
</body>
</html>
