= link_to "Home", root_path


- if !logged_in?
  |
  = link_to "Register", register_path
  |
  = link_to "Login", login_path
- if logged_in?
  |
  %img(src="http://www.gravatar.com/avatar/#{Digest::MD5.hexdigest(current_user.email.downcase)}?s=30")
  = link_to current_user.full_name, user_path(current_user)
  |
  = link_to "People", people_path
  |
  = link_to "Categories", category_path(current_user.id)
  |
  = link_to "Search", search_path
  
  #user_links.pull-right
    %ul
      %li.dropdown
        %a(href="#" id="dlabel" role="button" data-toggle="dropdown" class="dropdown-toggle" data-target="#")
          Welcome, #{current_user.full_name}
          %b.caret
        %ul.dropdown-menu(role="menu" aria-labelledby="dlabel")
          %li
            = link_to "Add New Word", new_vocabulary_path
            = link_to "Create New Category", new_category_path
            = link_to "Invite a Friend", new_invitation_path
            = link_to "Logout", logout_path
  = button_to "Donate", donate_path, method: :get