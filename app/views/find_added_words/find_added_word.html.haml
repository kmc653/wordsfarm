= render 'shared/header', header: "Search result:"

- if @word
  %table.table
    %thead
      %tr
        %th(width="15%") 單字
        %th(width="15%") 詞性
        %th(width="35%") 例句
        %th(width="15%") 創立者
    %tbody
      %tr
        %td
          = @word.word
        %td
          = @word.part_of_speech
        %td
          = @word.example
        %td
          = @word.creator.full_name
        %td
          = link_to "+ My Queue", queue_items_path(vocabulary_id: @word.id), method: :post, class: 'btn btn-default' unless current_user.queued_word?(@word) if @word.creator != current_user